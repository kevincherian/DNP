<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AppointmentFragment"
    android:id="@+id/layout"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/appointment_list_text"
        android:id="@+id/appointmentList"
        android:background="@color/colorButton"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/new_appointment_text"
        android:id="@+id/newAppointmentButton"
        android:textColor="@android:color/black"
        android:background="@color/colorButton"
        android:layout_alignParentRight="true" />


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/appointment_list"
        android:layout_below="@+id/newAppointmentButton"
        android:layout_height="match_parent"/>




</RelativeLayout>

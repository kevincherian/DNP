<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".NotificationListFragment"
    android:id="@+id/layout"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/notification_list_text"
        android:id="@+id/notificationList"
        android:background="@color/colorButton"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:text="@string/new_communication_text"
        android:id="@+id/newMessageButton"
        android:textColor="@android:color/black"
        android:background="@color/colorButton"
        android:layout_alignParentRight="true" />


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/notification_list"
        android:layout_below="@+id/newMessageButton"
        android:layout_height="match_parent"
        android:scrollIndicators="right" />




</RelativeLayout>
